@model HRMVC.Models.LoginModel
@{
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HRMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HRMVC.styles.css" asp-append-version="true" />
</head>
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h4 style="color:red">@ViewBag.Message</h4>
                    <h5 class="card-title text-center">შეიყვანეთ მომხმარებლის სახელი და პაროლი</h5>
                    <form class="form-signin" asp-controller="Access" asp-action="Login" method="post">

                        <div class="form-label-group">
                            <label asp-for="UserName">Username</label>
                            <input asp-for="UserName" class="form-control" placeholder="პირადი ნომერი ან ელ ფოსტა" required>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-label-group">
                            <label asp-for="Password"></label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="პაროლი" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <br />

                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">ავტორიზაცია</button>
                        <hr class="my-4">
                    </form>
                    <a href="/Access/Registration">არ ხართ დარეგისტრირებული? გადადით რეგისტრაციის გვერდზე</a>

                </div>
            </div>
        </div>
    </div>
</div>
